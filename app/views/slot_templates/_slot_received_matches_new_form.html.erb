<form action="/create_match_from_slot" method="post">

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @match.date %>">
  </div>

  <div class="form-group">
    <label for="start_time">
      Start time
    </label>

    <input type="text" id="start_time" name="start_time" class="form-control" value="<%= @match.start_time %>">
  </div>

  <div class="form-group">
    <label for="end_time">
      End time
    </label>

    <input type="text" id="end_time" name="end_time" class="form-control" value="<%= @match.end_time %>">
  </div>

  <div class="form-group">
    <label for="state_id">
      State
    </label>

    <input type="text" id="state_id" name="state_id" class="form-control" value="<%= @match.state_id %>">
  </div>

  <div class="form-group">
    <label for="sender_slot_id">
      Sender slot
    </label>

    <input type="text" id="sender_slot_id" name="sender_slot_id" class="form-control" value="<%= @match.sender_slot_id %>">
  </div>

  <input type="hidden" name="recipient_slot_id" value="<%= @slot.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create match
  </button>
</form>
